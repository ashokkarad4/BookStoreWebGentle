@model BookStoreWebGentle.Models.ContactUsModel

@{
    ViewData["Title"] = "AddNewContact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SignUp</title>

    <environment include="Development">
        <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        @*<link href="~/lib/twitter-bootstrap/css/bootstrap.min.css" accesskey="" rel="stylesheet" />*@
        <link href="http://cdn.jsdelivr.net/npm/bootstrap@3.0.2/dist/css/bootstrap.min.css"
              rel="stylesheet"
              asp-fallback-href="~/lib/twitter-bootstrap/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only"
              asp-fallback-test-property="position"
              asp-fallback-test-value="absolute"
              integrity="" crossorigin="anonymous">
    </environment>

</head>
<body>
    <div class="container">
        <h4 class="display-4 bg-light">Feel Free to ContactUs</h4>
        <hr />
        @if (ViewBag.IsSuccess == true)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>Thank you!!!</strong> for reach to us!!!<br />
                @*Click <a asp-controller="Contact" asp-action="GetBook" asp-route-id="@ViewBag.BookId">here</a> to view details.*@
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="d-flex justify-content-center" style="display:none">
            <div class="spinner-border" role="status" id="myLoader" style="display:none;">
                <span class="sr-only">Loading...</span>
            </div>
        </div>

        <form method="post" enctype="multipart/form-data" data-ajax-complete="myComplete" data-ajax-success="mySuccess" data-ajax-failure-="myFailure"
              data-ajax-loading="#myLoader" asp-controller="Contact" asp-action="AddNewContact">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-6 row">
                    <img src="~/images/Contactuspng.png" class="img-fluid" />
                </div>
                <div class="col-md-6">

                    <div class="col-md-12">
                        <label asp-for="FirstName"></label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="col-md-12">
                        <label asp-for="LastName"></label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="col-md-12">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <br /> <div class="col-md-12">
                        <label asp-for="Phone"></label>
                        <input asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="col-md-12">
                        <label asp-for="Description"></label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <input type="submit" value="Add Contact" class="btn btn-success" />
                    </div>
</form>
    </div>
    <div>
        <a asp-action="Index" asp-controller="Home">Back to Home</a>
    </div>



</body>
</html>

