                <div class="form-group">
                    <input type="submit" value="Add Book" class="btn btn-success" />
                </div>
            </div>
            <div class="col-md-6">
                <img src="~/images/AddBook.png" class="img-fluid" />
            </div>

        </div>
        
            
    </form>
</div>

}
