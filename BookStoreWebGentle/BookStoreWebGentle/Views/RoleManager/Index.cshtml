@model List<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "Role Manager";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<div class=" container col-md-10 mb-2 mt-3" >
    <h1>Add Roles</h1>
    <form method="post" asp-action="AddRole" asp-controller="RoleManager">
        <div class="col-4 mb-2 mt-3 ">
            <input name="roleName" class="form-control">
        </div>
        
        <span class="input-group-btn">
            <button class="btn btn-success" >Add New Role</button>
        </span>
    </form>
    <table class="table table-striped table-bordered mt-4">
        <thead>
            <tr>
                <th class="text-bg-success">Id</th>
                <th class="text-bg-success">Role</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                </tr>
            }
        </tbody>
    </table>
</div>
